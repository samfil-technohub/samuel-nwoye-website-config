[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=node_exporter
Group=node_exporter
Type=simple
ExecStart=/usr/local/bin/node_exporter --log.level=info --collector.logind --collector.systemd --collector.tcpstat \
 --collector.ntp --collector.interrupts  --collector.meminfo_numa --collector.processes --no-collector.bonding \
 --no-collector.bcache --no-collector.arp --no-collector.edac --no-collector.infiniband --no-collector.ipvs \
 --no-collector.mdadm --no-collector.nfs --no-collector.nfsd --no-collector.textfile --no-collector.wifi --no-collector.hwmon \
 --no-collector.conntrack --no-collector.timex --no-collector.zfs

[Install]
WantedBy=multi-user.target